# TrivAI Gaming Platform - Environment Configuration

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# LLM Configuration (Development - Ollama)
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=llama2
LLM_API_KEY=

# LLM Configuration (Production - OpenAI Compatible)
# LLM_PROVIDER=openai
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-3.5-turbo
# LLM_API_KEY=your-api-key-here

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=30000

# Security
SECRET_KEY=your-secret-key-change-in-production
ADMIN_SECRET_ROUTE=secret-panel-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# WebSocket
WS_PATH=/socket.io

# Admin Panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-in-production
ADMIN_TOTP_SECRET=

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Development
HOT_RELOAD=true
DEBUG_MODE=true 